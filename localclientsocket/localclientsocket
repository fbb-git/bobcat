#ifndef _INCLUDED_BOBCAT_LOCALCLIENTSOCKET_
#define _INCLUDED_BOBCAT_LOCALCLIENTSOCKET_

#include <bobcat/localsocketbase>

#include <string>
#include <sys/socket.h>
#include <sys/un.h>

namespace FBB
{

class LocalClientSocket: public LocalSocketBase
{
    public:
        LocalClientSocket();
        LocalClientSocket(std::string const &name) throw (Errno);

        void open(std::string const &name) throw (Errno);
        int connect() throw (Errno);    // returns fd (socket) to talk to
                                        // the server
    private:
        LocalClientSocket(LocalClientSocket const &other);    // NI
};

inline LocalClientSocket::LocalClientSocket()
{}

inline LocalClientSocket::LocalClientSocket(std::string const &name) 
                                                                throw (Errno)
:
    LocalSocketBase(name)
{}

inline void LocalClientSocket::open(std::string const &name) throw (Errno)
{
    LocalSocketBase::open(name);
}

} // FBB

#endif
