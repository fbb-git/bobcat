#include <cstddef>
#include <getopt.h>

namespace FBB
{

void deprecated__(bool &called, char const *msg);

class OptStructArray
{
    typedef struct option  OptStruct;

    size_t    d_n;
    OptStruct *d_opt;
    
    public:
        OptStructArray(size_t n);
        ~OptStructArray();

        OptStruct *get();
};

#include "destructor.f"
#include "get.f"

} // FBB

