void bobcatlcgen()
{
    string dest;
    dest = g_tmpbin + g_lcgen;

    g_sources = "*.cc";
    g_compiler = GPP;
    g_copt = COPT;
 
    md(g_tmpbin);

    std_cpp("o", 999, "lc/lcgen", "");
    run("rm -f lc/lcgen/o/999main.o");
    run(g_compiler + 
            " -isystem tmp -o " + dest +
            " lc/lcgen/main.cc lc/lcgen/o/*"
            " -L" + g_tmplib + 
            " -lbobcat");

    exit(0);
}
