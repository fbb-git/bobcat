#ifndef INCLUDED_BOBCAT_ALIGN_
#define INCLUDED_BOBCAT_ALIGN_

#include <ostream>

namespace FBB
{

typedef std::ios_base &(*Manipulator)(std::ios_base &);

#include "center.if"

class Align
{
    int d_row;              // -1 or the row index to align
    size_t d_col;           // acts as field width when setting the width of 
                            // an element.
    Manipulator d_manip;

    public:
        Align(int row, size_t column, Manipulator manip);
        Align(size_t col = 0, Manipulator manip = std::right);
        explicit Align(Manipulator manip);

        bool hasRow() const;

        operator size_t() const;            // .i

        size_t col() const;                 // .i
        size_t row() const;                 // .i

        Manipulator manip() const;          // .i

        void setWidth(size_t width);        // .i
        void setManip(Manipulator manip);   // .i
};

#include "opsizet.if"
#include "col.if"
#include "row.if"
#include "hasrow.if"
#include "manip.if"
#include "setmanip.if"
#include "setwidth.if"

} // FBB

#endif




