#ifndef _INCLUDED_BOBCAT_REDIRECTOR_
#define _INCLUDED_BOBCAT_REDIRECTOR_

#include <bobcat/errno>

namespace FBB
{

class Redirector
{
    int d_fd;

    public:
        enum StandardFilenos
        {
            STDIN = 0,
            STDOUT,
            STDERR
        };

        Redirector(int fd);

        void accessVia(int alternateFd) const throw (Errno);
        void swallow(int alternateFd) const throw (Errno);
};            

inline Redirector::Redirector(int fd)
:
    d_fd(fd)
{}

inline void Redirector::accessVia(int alternateFd) const throw (Errno)
{
    swallow(alternateFd);
}

} // FBB

#endif
