#ifndef INCLUDED_BOBCAT_A2X_
#define INCLUDED_BOBCAT_A2X_

#include <sstream>
#include <string>

namespace FBB
{

class A2x: public std::istringstream
{
    static bool s_lastFail;

    public:
        A2x() = default;
        explicit A2x(char const *txt);          // 1.i initialize from text
        explicit A2x(std::string const &str);   // 2.i
        A2x(A2x const &other);                  // 3.i

        template <typename Type>
        operator Type();                        // .i

        template <typename Type>    
        Type to();                              // .i

        A2x &operator=(char const *txt);        

        A2x &operator=(std::string const &str); // 1.i
        A2x &operator=(A2x const &other);       // 2.i

        static bool lastFail();                 // .i
};

#include "a2x1.if"
#include "a2x2.if"
#include "a2x3.if"
#include "to.if"
#include "optype.if"
#include "opis1.if"
#include "opis2.if"
#include "lastfail.if"

} // FBB

#endif
