#ifndef INCLUDED_BOBCAT_RANGER_
#define INCLUDED_BOBCAT_RANGER_


namespace FBB
{

template <typename Iter>
class Ranger
{
    Iter d_begin;
    Iter d_end;

    public:
        Ranger(Iter const &begin, Iter const &end);     // .i

        Iter const &begin() const;                      // .i
        Iter const &end() const;                        // .i
};

#include "ranger1.i"        // ranger(Iter &&begin, Iter &&end)
#include "ranger2.i"        // ranger(Data *begin, Data *end)
#include "ranger3.i"        // ranger(Iter &&begin, size_t count)
#include "ranger4.i"        // ranger(Data *begin, size_t count)

} // FBB

#endif



