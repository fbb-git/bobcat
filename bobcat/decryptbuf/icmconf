    // Note that 'PARSEFILES' overrules 'GRAMBUILD'
//#define GRAMBUILD

    // Name of the file generated by the parser generator containing the 
    // parser function
#define PARSOUT             "parse.cc"


    // Additional defines, which normally require no modification
    // ==========================================================

