#!/bin/bash

_project_=bobcat
_product_=bobcat

echo -n "Need to (re)create ${_project_}'s wip files for gh-pages [y/n] ? "
read yesno

if [ "$yesno" == "y" ] ; then
    git co master

    cd ${_product_}
    ./build man

    ./build github
    ./build distclean
    cd ..    
    git co gh-pages
fi

cp -r ../wip/changelog.txt ../wip/manhtml .

yodl2html index.yo || exit 1

echo "Running 'git st': no files or ignorable files should be shown"
git st

echo

echo -n "ci change to index.html etc., push the result and co master [y/n] ? "
read yesno

if [ "$yesno" == "y" ] ; then
    echo -n "Enter the ci message: "
    read msg;

    RELEASE=`head -n1 ../wip/release.yo | 
                sed 's/SUBST(_CurVers_)(\(.*\))/\1/'`
    git ci -am "$msg"

    git push
    git co master
fi


